[Unit]
Description=Install Vespera system flatpaks
After=bazzite-flatpak-manager.service
Wants=bazzite-flatpak-manager.service

[Service]
Type=oneshot
ExecStart=/usr/libexec/vespera-flatpak-manager
Restart=on-failure
RestartSec=30
StartLimitInterval=0

[Install]
WantedBy=multi-user.target
