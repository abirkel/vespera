{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],

  "forkProcessing": "enabled",
  "dependencyDashboard": true,
  "rebaseWhen": "never",

  "packageRules": [
    {
      "matchUpdateTypes": ["pin", "pinDigest"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "description": "Automerge GitHub Actions digest updates in workflows",
      "matchDatasources": ["github-tags"],
      "matchFileNames": [".github/workflows/**"],
      "matchUpdateTypes": ["digest", "pinDigest"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "description": "Automatically update Bazzite-Nvidia digests to match the latest build",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/ublue-os/bazzite-nvidia"],
      "matchFileNames": ["Containerfile"],
      "pinDigests": true,
      "automerge": true,
      "ignoreTests": true,
      "commitMessagePrefix": "chore(deps): ",
      "enabled": true 
    }
  ]
}
